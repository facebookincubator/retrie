 {-# LANGUAGE CPP #-}
 module CPP where
 
 #define TRUE 1

 infixr 0 $

 main :: IO ()
 main = print $ foo (bar [1..10])
 
 foo :: Int -> Int
 foo x = x - 2
 
 #if TRUE

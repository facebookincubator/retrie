   where
-    zs = map (+2) (map (*4) ys)
+    zs = map ((+2) . (*4)) ys

 otherthing :: Maybe a -> Int
 otherthing mb = case mb of
   Just{} -> 1
   Nothing -> 0

 useit :: Int
-useit = otherthing (Just 54)
+useit = case Just 54 of
+  Just{} -> 1
+  Nothing -> 0


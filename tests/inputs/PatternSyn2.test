 {-# LANGUAGE PatternSynonyms #-}
 {-# LANGUAGE ViewPatterns    #-}
 module PatternSyn2 where

 pattern Some x <- Just x where Some x = Just x
 pattern JustUnit = Some ()
 pattern SomeUnit <- JustUnit

 foo :: Maybe () -> Maybe ()

-foo (Just ()) = Just ()
+foo (Some ()) = Some ()

-foo (id -> Just ()) = Just ()
+foo (id -> Some ()) = Some ()

-foo (Some ()) = Some ()
+foo JustUnit = JustUnit

-foo JustUnit = JustUnit
+foo SomeUnit = JustUnit
